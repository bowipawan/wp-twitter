%h1
  = "Let's Post"

= simple_form_for @post, url: 'create_post', method: :post do |f|

  .form-inputs.col-sm-12
    = f.text_area :msg, type: "text", label: false, placeholder: "Say something ...", class:"form-control"

  .form-actions
    = f.button :submit, 'Post', class:"btn btn-dark mt-2"
    = link_to 'Cancel', feed_path, class:"btn btn-outline-dark mt-2"