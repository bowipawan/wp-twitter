%h1 Listing posts

%table#table
  %thead
    %tr
      %th Msg
      %th User
      %th
      %th
      %th

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.msg
        %td= post.user
        %td= link_to 'Show', show_post_path(post)
        %td= link_to 'Edit', edit_post_path(post)
        %td= link_to 'Destroy', destroy_post_path(post), method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Post', new_post_path